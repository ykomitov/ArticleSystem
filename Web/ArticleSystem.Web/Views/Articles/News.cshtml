                <li><a href="#">Suspendisse potenti integer</a></li>
                <li><a href="#">Accumsan nunc sollicitudin id</a></li>
            </ul>
        </div>
        <div id="aside-posts" class="aside-element">
            <h3>Recent posts</h3>
            <ul>
                <li><a href="#">Curabitur blandit rutrum</a></li>
                <li><a href="#">Pharetra donec dictum felis eu</a></li>
                <li><a href="#">Eros pretium vulputate</a></li>
                <li><a href="#">Etiam quis nulla ac turpis moles</a></li>
                <li><a href="#">Suspendisse potenti integer</a></li>
                <li><a href="#">Accumsan nunc sollicitudin id</a></li>
            </ul>
        </div>
    </aside>
    <div id="main" class="inner-page">
        @foreach (var article in Model.Articles)
            {
            <div class="post-preview">
                <h1>@article.Title</h1>
                <p class="post-info">
                    Posted by <span class="post-user">@article.Author</span> on <span class="post-date">@Html.DisplayFor(d => article.CreatedOn)</span> in <span class="post-category">@article.Category</span> |
                    <span class="post-comments">@article.Comments comments</span>
                </p>
                <div class="post-img-container">
                    @{
                        if (article.HeaderImage != null)
                        {
                            string imageBase64 = Convert.ToBase64String(article.HeaderImage);
                            string imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                            
                            <img src="@imageSrc" />
                        }
                        else
                        {
                            <img src="~/images/default-header-img.jpg">
                        }
                    }
                </div>
                <div class="post-text">@Html.Raw(article.TextHtml)</div>
                <a href="~/Articles/@article.Category/@article.Id" class="btn post-link">Read More</a>
            </div>
        }
        <div class="pager">
            <div class="pager-buttons">
                @{
                    for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <a href="~/Articles/News/@i" class="btn post-link current">@i</a>
                        }
                        else
                        {
                            <a href="~/Articles/News/@i" class="btn post-link">@i</a>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>